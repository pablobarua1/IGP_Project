pipeline {
    agent any
    
    environment {
        SSH_USER = 'igp'
        SSH_KEY = '/home/igp/.ssh'
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout your Ansible playbook repository
                git 'https://github.com/pablobarua1/IGP_Project.git'
            }
        }
        
        stage('Run Ansible Playbook') {
            steps {
                script {
                    // Set up SSH key
                    sshagent(credentials: ['816a60d3-9aa0-40b7-a0d1-ee0c9a6499b7']) {
                        // Run ansible-playbook command
                        sh "ansible-playbook -i /home/igp/playbook/inventory.ini -u ${SSH_USER} --private-key=${SSH_KEY} test.yml"
                    }
                }
            }
        }
    }
}
