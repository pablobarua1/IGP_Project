pipeline {
  agent any
  stages {
    stage("Build") {
      steps {
        git url: 'https://github.com/pablobarua1/IGP_Project.git'
        withMaven {
          sh "mvn clean verify"
        } 
      }
    }
    stage('Code Checkout') {
      steps {
        git url: 'https://github.com/pablobarua1/IGP_Project.git'
        }
    }
    stage('Code Compile') {
      steps {
        sh 'mvn compile'
      }
    }
    stage('Unit Test') {
      steps {
        sh 'mvn test'
      }
    }
    stage('Code packaging') {
      steps {
        sh 'mvn package'
      }
    }
  }
}
