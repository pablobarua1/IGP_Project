pipeline {
    agent any

    environment {
        // Replace with your Docker Hub username and repository name
        DOCKER_HUB_REPO = 'pablo.barua@gmail.com/igp_project'
        DOCKER_CREDENTIALS_ID = 'DockerHubLogin' 
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your version control system
                git url: 'https://github.com/pablobarua1/IGP_Project', branch: 'master'
                // checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    try {
                        echo "Building Docker image: ${DOCKER_HUB_REPO}:${env.BUILD_ID}"
                        def dockerImage = docker.build("${DOCKER_HUB_REPO}:${env.BUILD_ID}")
                        dockerImage.inside {
                            // Perform any additional steps inside the Docker container if needed
                            sh 'echo "Running inside Docker container"'
                        }
                    } catch (Exception e) {
                        echo "Error occurred: ${e.message}"
                        throw e
                    }
                }
            }
        }

       
        stage('Push Docker Image') {
            steps {
                script {
                    // Log in to Docker Hub
                    docker.withRegistry('https://registry.hub.docker.com', "${DOCKER_CREDENTIALS_ID}") {
                        // Push the Docker image to the repository
                        docker.image("${DOCKER_HUB_REPO}:${env.BUILD_ID}").push()
                    }
                }
            }
        }
        
        stage('Clean Up') {
            steps {
                script {
                    // Clean up local Docker images
                    docker.image("${DOCKER_HUB_REPO}:${env.BUILD_ID}").remove()
                }
            }
        }
    }

    post {
        always {
            // Clean up workspace after build
            cleanWs()
        }
    }
}
